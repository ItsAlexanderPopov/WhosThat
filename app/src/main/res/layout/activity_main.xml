<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/theme_toggle_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_theme_toggle"
        android:clickable="true"
        android:focusable="true"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="Toggle theme" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/button_pokemon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pokemon_title_screen"
            android:layout_marginBottom="20dp" />

        <Button
            android:id="@+id/button_champion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lol_title_screen" />

        <Button
            android:id="@+id/button_achievements"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/achievementModels" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>