<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.whosthat">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WhosThat">

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".pokemon.PokemonPage"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustPan"
            android:label="Pokemon"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".league.LeagueOfLegendsPage"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustPan"
            android:label="League of Legends"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".achievements.AchievementsActivity"
            android:label="Achievements"
            android:parentActivityName=".MainActivity"
            />
    </application>

</manifest>